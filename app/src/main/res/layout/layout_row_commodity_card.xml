<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="10sp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:padding="10sp"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/price_linear_layout">
            <LinearLayout
                android:theme="@style/TextTheme.MarginL0T5R0B5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/commodity_edit_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tool:text="Tomato"
                    android:textSize="25sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    />
                <TextView
                    android:id="@+id/variety_edit_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tool:text="Var-03"
                    android:layout_marginStart="10sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    />
            </LinearLayout>

            <LinearLayout
                android:theme="@style/TextTheme.MarginL0T5R0B5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/state"/>
                <TextView
                    android:id="@+id/state_edit_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tool:text="Maharashtra"
                    android:layout_marginStart="10sp"
                    />
            </LinearLayout>
            <LinearLayout
                android:theme="@style/TextTheme.MarginL0T5R0B5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/district"/>
                <TextView
                    android:id="@+id/district_edit_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tool:text="Thane"
                    android:layout_marginStart="10sp"
                    />
            </LinearLayout>
            <LinearLayout
                android:theme="@style/TextTheme.MarginL0T5R0B5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/market"/>
                <TextView
                    android:id="@+id/market_edit_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tool:text="Sec- 48"
                    android:layout_marginStart="10sp"
                    />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/price_linear_layout"
            android:theme="@style/TextTheme.MarginL0T5R0B5"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_margin="20sp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/rs"
                android:textStyle="bold"
                android:textSize="30sp"
                />
            <TextView
                android:id="@+id/price_edit_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="30sp"
                tool:text="30"
                />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>